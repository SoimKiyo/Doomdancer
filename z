# Fonction pour gérer les entrées dans le menu
def handle_input(self, event):
    if event.type == pygame.KEYDOWN or event.type == pygame.JOYBUTTONDOWN or event.type == pygame.JOYAXISMOTION:
        if not self.in_settings:
            if event.type == pygame.KEYDOWN:
                if event.key == pygame.K_UP:
                    self.selected = (self.selected - 1) % len(self.main_menu_options)
                elif event.key == pygame.K_DOWN:
                    self.selected = (self.selected + 1) % len(self.main_menu_options)
                elif event.key == pygame.K_RETURN:
                    return self.handle_main_menu_selection()
            elif event.type == pygame.JOYBUTTONDOWN and event.button == 0:  # Bouton A
                return self.handle_main_menu_selection()
            elif event.type == pygame.JOYAXISMOTION:
                if event.axis == 1 and event.value < -0.5:  # Axe Y vers le haut
                    self.selected = (self.selected - 1) % len(self.main_menu_options)
                elif event.axis == 1 and event.value > 0.5:  # Axe Y vers le bas
                    self.selected = (self.selected + 1) % len(self.main_menu_options)
        else:
            if event.type == pygame.KEYDOWN:
                if event.key == pygame.K_UP:
                    self.settings_selected = (self.settings_selected - 1) % len(self.settings_options)
                elif event.key == pygame.K_DOWN:
                    self.settings_selected = (self.settings_selected + 1) % len(self.settings_options)
                elif event.key == pygame.K_RIGHT:
                    self.adjust_setting(1)
                elif event.key == pygame.K_LEFT:
                    self.adjust_setting(-1)
                elif event.key == pygame.K_RETURN and self.settings_selected == 3:
                    self.in_settings = False
            elif event.type == pygame.JOYBUTTONDOWN and event.button == 0:  # Bouton A
                if self.settings_selected == 3:
                    self.in_settings = False
            elif event.type == pygame.JOYAXISMOTION:
                if event.axis == 1 and event.value < -0.5:  # Axe Y vers le haut
                    self.settings_selected = (self.settings_selected - 1) % len(self.settings_options)
                elif event.axis == 1 and event.value > 0.5:  # Axe Y vers le bas
                    self.settings_selected = (self.settings_selected + 1) % len(self.settings_options)
                elif event.axis == 0 and event.value > 0.5:  # Axe X vers la droite
                    self.adjust_setting(1)
                elif event.axis == 0 and event.value < -0.5:  # Axe X vers la gauche
                    self.adjust_setting(-1)

    return None
